#include <iostream>

using namespace std;

int main()
{
    int v[10], n, S=0;
    cout<<"Cate elemente are vectorul?";
    cin>>n;
    for(int i=0;i<n;i++)
    {
        cin>>v[i];
        if(v[i]%2==0)
            S=S+v[i];
    }
    cout<<"Suma nr pare: "<<S;
    cout<<endl<<"Nr pare: ";
    for(int i=0;i<n;i++)
        if(v[i]%2==0)
            cout<<v[i]<<" ";
    cout<<endl<<"Vectorul inversat: ";
    for(int i=n-1;i>=0;i--)
        cout<<v[i]<<" ";
    return 0;
}
